#-----------------------------------------------------------------------------
# directories and files

file		:= Guide
sources         := $(wildcard *.lhs)

#-----------------------------------------------------------------------------
# commands

flags		:= -math -align 33

#-----------------------------------------------------------------------------
# pattern rules

%.tex : %.lhs $(sources)
	lhs2TeX $(flags) $< > $@

%.ps : %.dvi
	dvips -D600 -o $@ $<

#-----------------------------------------------------------------------------
# rules

$(file).dvi : $(file).tex
	latex $(file)
	latex $(file)
	latex $(file)
